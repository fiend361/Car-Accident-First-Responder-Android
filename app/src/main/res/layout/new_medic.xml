<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:layout_height="130dp">

    <TextView
        android:text="Name:"
        android:id="@+id/medic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/medic_name"
        android:text="Name:"
        android:id="@+id/medic_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/medic_number"
        android:text="Name:"
        android:id="@+id/medic_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/medic_address"
        android:text="Name:"
        android:id="@+id/medic_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/medic_experience"
        android:text="Name:"
        android:id="@+id/medic_qualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/callbtn"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:src="@drawable/ic_call" />

</RelativeLayout>